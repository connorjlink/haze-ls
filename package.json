{
	"name": "haze-ls",
	"description": "A context-sensitive LSP-compliant language server for my programming language suite, Haze.",
	"author": "Connor J. Link",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/connorjlink/haze-ls"
	},
	"publisher": "connorjlink",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:hz"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "hz",
      			"extensions": [".hz", ".hzs", ".hzi"],
      			"aliases": ["hz", "hzs", "hzi"]
			}
		],
		"grammars": [
			{
				"language": "hz",
				"scopeName": "source.hz",
				"path": "./syntaxes/haze.tmLanguage"
			}
		],
		"configuration": {
			"type": "object",
			"title": "haze-ls configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
